<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#03FF9800"
                tools:context="info.emperinter.DateListThingsAnalyseAndroid.ContainerActivity">
    <LinearLayout
            android:id="@+id/fl_liner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1" android:orientation="vertical">
        <FrameLayout
                android:id="@+id/fl_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_below="@+id/fl_liner"
    >
        <Button
                android:id="@+id/btn_tagcloud"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_bubble_chart_line"
                android:layout_marginRight="58dp"
        />

        <Button
                android:id="@+id/add"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_add_circle_line"
        />
        <Button
                android:id="@+id/btn_lineanalyse"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="58dp"
                android:background="@drawable/ic_line_chart_line"
        />
    </LinearLayout>
    <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_below="@+id/btn"
    >
        <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="Tag Cloud"
                android:textSize="8dp"
                android:textColor="#3298DB"
                android:textAlignment="center"
                android:layout_marginRight="58dp"
        />

        <TextView
                android:layout_width="38dp"
                android:text="Add Data"
                android:textSize="8dp"
                android:textColor="#FF5722"
                android:textAlignment="center"
                android:layout_height="wrap_content"
        />
        <TextView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:text="Line Chart"
                android:textSize="8dp"
                android:textColor="#4CAF50"
                android:textAlignment="center"
                android:layout_marginLeft="58dp"
        />
    </LinearLayout>
</LinearLayout>